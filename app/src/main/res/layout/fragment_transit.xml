<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MapFragments.TransitFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stopOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="start"
            android:text="@string/stop_7144"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StopRecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stopOne"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/stopTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="start"
            android:text="@string/stop_8188"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_below="@id/StopRecyclerView1"
            android:background="@drawable/border_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StopRecyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stopTwo"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/stopThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="start"
            android:text="@string/stop_6450"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_below="@id/StopRecyclerView2"
            android:background="@drawable/border_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StopRecyclerView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stopThree"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"/>
    </RelativeLayout>

</FrameLayout>
